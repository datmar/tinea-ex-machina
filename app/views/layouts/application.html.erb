<!DOCTYPE html>
<html>
<head>
  <title>Tinea ex Machina</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="container">
    <nav>
      <h1 id="logo">
        <%= link_to 'Tinea ex Machina', root_path %>
      </h1>
      <% if current_user %>
        <%= link_to current_user.username, current_user %> | 
        <%= link_to 'logout', '/session', method: 'delete' %> | 
      <% else %>
        <%= link_to 'login', new_session_path, id: 'login-link' %> | 
        <%= link_to 'register', new_user_path, id: 'register-link' %> | 
      <% end %>
      <%= link_to 'Ask a Question', new_question_path %> | 
      <%= link_to 'Questions', questions_path %>
      <%= render 'sessions/form' %>
    </nav>
  </header>
  <main class='container'>
    <%= yield %>
  </main>
</body>
</html>
