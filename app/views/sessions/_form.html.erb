<%= form_tag sessions_path, id: 'login-form' do %>
  <fieldset>
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, placeholder: 'email@example.com' %>

    <%= label_tag :password %>
    <%= password_field_tag :password, nil, placeholder: 'password' %>

    <%= submit_tag 'Login' %>
  </fieldset>
<% end %>
